<% @user ||= current_user %>
<!-- When @user is not nil, it sets @user to the current user. Otherwise, does nothing. -->
<div class="stats">
	<a href="<%= following_user_path(@user) %>">
		<strong id="following" class="stat">
			<%= @user.followed_users.count %>
		</strong>
		following
	</a>

	<a href="<%= followers_user_path(@user )%>">
		<strong id="followers" class="stat">
			<%= @user.followers.count %>
		</strong>
		follower<% unless @user.followers.count == 1 %>s<% end %>
	</a>
</div><!-- /.stats -->